      "dependencyUpdate": ":arrow_up: Update ${dependency} to version ${version}",
      "devDependencyUpdate": ":arrow_up: Update ${dependency} to version ${version}",
      "dependencyPin": ":pushpin: Pin ${dependency} to ${oldVersion}",
      "devDependencyPin": ":pushpin: Pin ${dependency} to ${oldVersion}"
    },
    "prTitles": {
      "initialPR": ":arrow_up: Update dependencies to enable Greenkeeper",
      "initialPrBadge": ":memo: Add badge to enable Greenkeeper",
      "initialPrBadgeOnly": ":memo: Add Greenkeeper badge",
      "initialSubgroupPR": ":arrow_up: Update dependencies for ${group}",
      "basicPR": ":arrow_up: Update ${dependency} to the latest version",
      "groupPR": ":arrow_up: Update ${dependency} in group ${group} to the latest version"
    }
  }
